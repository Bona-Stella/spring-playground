# 쿼리 루트 정의: 클라이언트가 요청할 수 있는 진입점
type Query {
    boards: [Board]  # 보드 목록을 가져온다
}

# 보드 타입 정의
type Board {
    id: ID!
    name: String!
    columns: [Column] # 보드 안에 컬럼 리스트 추가
}

# ▼ 추가된 부분
type Mutation {
    createBoard(name: String!): Board
}

# 새로운 타입 정의
type Column {
    id: ID!
    name: String!
}